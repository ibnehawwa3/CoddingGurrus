@model CoddingGurrus.Core.Models.Course.CourseModel
<div class="page-body">
    <div class="container-xl">
        <div class="col-md-12 mb-5">
            @using (Html.BeginForm("Edit", "Course", FormMethod.Post, new { @class = "card" }))
            {
                <div class="card-header">
                    <h3 class="card-title">Edit Course</h3>
                </div>
                <div class="card-body">
                    @Html.HiddenFor(model => model.Id)
                    <div class="row form-group mb-2">
                        <label class="col-1 col-form-label required">Name</label>
                        <div class="col-md-4">
                            @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @required = "required" })
                            @Html.ValidationMessageFor(model => model.Title)
                        </div>
                        <label class="col-1 col-form-label">Description</label>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Description)
                        </div>
                    </div>
                    <div class="row form-group mb-2">
                    </div>
                </div>
                <div class="card-footer text-end">
                    <a href="@Url.Action("Index","Course")" class="btn btn-danger">Cancel</a>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            }
        </div>
    </div>
</div>