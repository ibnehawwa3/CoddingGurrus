@model CoddingGurrus.Core.Models.Menu.MenuModel;
<div class="page-body">
    <div class="container-xl">
        <div class="col-md-12 mb-5">
            @using (Html.BeginForm("Create", "Menu", FormMethod.Post, new { @class = "card" }))
            {
                <div class="card-header">
                    <h3 class="card-title">Create New Menu</h3>
                </div>
                <div class="card-body">
                    @Html.HiddenFor(model => model.Id)
                    <div class="row form-group mb-2">
                        <label class="col-2 col-form-label required">Menu Name</label>
                        <div class="col-md-4">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @required = "required" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>
                    <div class="row form-group mb-2">
                        <label class="col-2 col-form-label required">Menu Url</label>
                        <div class="col-md-4">
                            @Html.TextBoxFor(model => model.Url, new { @class = "form-control", @required = "required" })
                            @Html.ValidationMessageFor(model => model.Url)
                        </div>
                    </div>
                    <div class="row form-group mb-2">
                    </div>
                </div>
                <div class="card-footer text-end">
                    <a href="@Url.Action("Index","Menu")" class="btn btn-danger">Cancel</a>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            }
        </div>
    </div>
</div>
